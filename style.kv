<WeatherScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: "20sp"

        MDTopAppBar:
            title: "MDTopAppBar"
            right_action_items: [["dots-vertical", lambda x: app.callback()]]
        MDBoxLayout:
            spacing: "10px"
            size_hint: 0.9, None
            pos_hint: {'center_x': 0.5}
            MDTextField:
                id: city
                hint_text: "Веддіть місто"
                mode: "fill"
                max_text_length: 25
                helper_text: "Наприклад: Київ, Лондон, Париж"

            MDIconButton:
                id: search_btn
                on_press: root.search()
                icon: "text-search"
                icon_size: "24sp"
                md_bg_color: app.theme_cls.primary_color
        MDBoxLayout:
            orientation: 'vertical'
            pos_hint:  {'center_x': 0.5}
            size_hint: 0.9, 0.9
            AsyncImage:
                id: icon
                size_hint: None, None
                size: ("120sp", "150sp")
                pos_hint: {'center_x': 0.5}
                fit_mode: 'contain'
                source: "https://openweathermap.org/img/wn/10d@2x.png"
            MDLabel:
                id: temp
                text: "14°С"
                font_style: 'H1'
                halign: 'center'
                size_hint: 0.9, 0.5
            MDLabel:
                id: feels_like
                text: "Відчувається як"
                font_style: 'Caption'
                halign: 'center'

            MDLabel:
                id: desc
                text: "Ясно"
                font_style: 'H4'
                halign: 'center'
            
            MDLabel:
                id: humidity
                text: "Вологість:"
                font_style: 'Body1'
                halign: 'center'

            MDLabel:
                id: wind
                text: "Вітер:"
                font_style: 'Body1'
                halign: 'center'

            MDFillRoundFlatButton:
                text: "Дивитися Прогноз"
                pos_hint: {'center_x': 0.5}
                on_press: root.show_forecast()
            Widget:
                size_hint_y: None 
                height: "50sp"


<ForecastScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: "20sp"

        MDTopAppBar:
            title: "Прогноз погоди"
            left_action_items: [["arrow-left", lambda x: root.back()]]
        ScrollView:
            
            MDBoxLayout:
                id: weather_list
                orientation: 'vertical'
                pos_hint: {'center_x': 0.5}
                size_hint: 0.9, 0.4

