<WeatherScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: "20sp"

        MDTopAppBar:
            title: "MDTopAppBar"
            right_action_items: [["dots-vertical", lambda x: app.callback()]]
        
        MDBoxLayout:
            spacing: "10px"
            size_hint: 0.9, None
            pos_hint: {'center_x': 0.5}
            MDTextField:
                hint_text: "Веддіть місто"
                mode: "fill"
                max_text_length: 25
                helper_text: "Наприклад: Львів, Київ, Одеса"

            MDIconButton:
                icon: "text-search"
                icon_size: "24sp"
                md_bg_color: app.theme_cls.primary_color
        MDBoxLayout:
            orientation: 'vertical'
            MDLabel:
                text: "14°С"
                font_style: 'H1'
                halign: 'center'
                size_hint: 0.9, 0.5
            MDLabel:
                text: "Ясно"
                font_style: 'H2'
                halign: 'center'
        